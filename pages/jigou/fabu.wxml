<view class='widt clear'>
    <view class='tijiao'>
    <form bindsubmit="formSubmit">
       <view class='bbe list'>
         <view ><input class="text_input" placeholder='请输入课程名称' name="names" /></view>
         <view class='clear'></view>
       </view>
       <view class='bbe list'>
          <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange"  value="{{multiIndex}}" range="{{multiArray}}">
　　      <view class="picker fl_l w45">{{category1}}</view><view class="picker fl_l w45">{{category2}}</view>
        </picker>
       </view>
      <view class='bbe list'>
        <view class='fl_l w30'>免费试听：</view>
         <view class='fl_r w70'>
         <radio-group class="radio-group" bindchange="radioChange">
          <label  ><radio value="1" />是</label ><label  ><radio value="2"  /> 否</label ></radio-group>
        </view>
         <view class='clear'></view>
       </view>
       <view class='bbe list'>
         <view ><input class="text_input" placeholder='请输入课程参考价' name="price" /></view>
         <view class='clear'></view>
       </view>
      <view class='bbe list clear'>
         <view class='fl_l w30'>缩略图：</view>
         <view class='fl_r w70'>
           <view bindtap="changeAvatar" data-id='{{organization_id}}' style='padding-top:5px' class='fl_l'><image src='../../images/add.png' style='width:30px;' mode='widthFix'></image></view>
           <view wx:if='{{logo}}' style='padding-left:20px; padding-top:10px' class='fl_l'><image src='{{logo}}' style='width:30px; height:30px;' mode='widthFix'></image></view>
         </view>
         <view class='clear'></view>
       </view>
             <view class='bbe list clear'>
         <view class='fl_l w30'>课程图片：</view>
         <view class='fl_r w70'>
           <view bindtap="changesuoluotu" data-id='{{organization_id}}' style='padding-top:5px'  class='fl_l'><image src='../../images/add.png' style='width:30px;' mode='widthFix'></image></view>
           <view wx:for='{{xianshi}}' style='padding-left:20px;padding-top:10px' class='fl_l sctp'><image src='{{item}}' style='width:50px; height:50px;' mode='widthFix'></image><image src='../../images/dels.png' class='dels' bindtap='dels' data-tu='{{item}}'></image></view>
         </view>
         <view class='clear'></view>
       </view>
       <view class='bbe list clear'>
         <view>
         <input class="text_input" placeholder='输入当前课程的宣传内容，15字以内' name="subtitle" />
         </view>
       </view>
    <view class='height_10 bg_hs'></view>
       <view class='bbe list clear'>
         <view>
         <input class="text_input" placeholder='适用对象：' name="use_object" />
         </view>
       </view>
      <view class='bbe list clear'>
         <view>
         <input class="text_input" placeholder='班   型：' name="class_type_str" />
         </view>
       </view>
       <view class='bbe list clear'>
         <view>
         <input class="text_input" placeholder='班   制：' name="class_system" />
         </view>
       </view>
       <view class='bbe list clear'>
         <view>
         <input class="text_input" placeholder='课  时  数：' name="class_hour" />
         </view>
       </view>
       <view class='bbe list clear'>
         <view>
         <input class="text_input" placeholder='日   期：' name="riqi" />
         </view>
       </view>
      <view class='list' style='padding-top:5px;'>
        <view class='bbe bte bre ble' style='margin:10px 0;'>
         <textarea placeholder="输入课程详情。" name='introduce' style='height:100px;'/>
         </view>
       </view>
      <view class='clear sts'>
       <button form-type="submit" class='button1 bg_cs tc color_bai'>发布</button>
      </view>
    </form>
    </view>

