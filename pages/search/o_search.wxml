      <view class='fl_l w85'><input class="text_input" placeholder="请输入机构名称"  name="keyword" value='{{str}}' /></view>
      <view class='fl_r w15' ><button form-type="submit" class='submits'><image src='../../images/search.png'></image></button></view>
      
    </view>
   </form>
   </view>
